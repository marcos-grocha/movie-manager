<header><h1>Catalogo de Filmes</h1></header>
<section>
    <h3>Filmes Disponíveis</h3>
    <% @movies.each do |movie| %>
        <%= button_to movie.title, movie, method: :get %> <br>
    <% end %>
</section><br>
<section>
    <h3>Diretores</h3>
    <% @directors.each do |director| %>
        <%= button_to director.name, director, method: :get %> <br>
    <% end %>
</section><br>
<section>
    <h3>Gêneros</h3>
    <% @genres.each do |genre| %>
        <%= button_to genre.nome, genre, method: :get %> <br>
    <% end %>
</section>
